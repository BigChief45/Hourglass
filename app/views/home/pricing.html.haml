.row.mb-5
  .col-md-12
    .text-center
      %h1
        %strong Pricing Plans

      %h4.text-muted Simple pricing plans for your needs

.row.align-items-center.justify-content-center
  / Free Plan
  .col-sm-6.col-lg-3
    .card
      .card-body.text-center
        .card-category
          Free
        .display-3.my-4
          $0
        %ul.list-unstyled.leading-loose
          %li
            %strong 1
            Punchcard
          %li
            %i.fe.fe-check.text-success.mr-2
            Unlimited Entries
          %li
            %i.fe.fe-check.text-success.mr-2
            Reports & Statistics

        .text-center.mt-6
          = link_to 'Choose Plan', new_user_registration_path, class: 'btn btn-secondary btn-block'

  / Premium Plan
  .col-sm-6.col-lg-3
    = render 'home/premium_plan', mode: :select
