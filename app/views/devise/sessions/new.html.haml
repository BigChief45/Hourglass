%h2
  %strong Sign In

%p.small
  Or
  = link_to 'create an account', register_path

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  // ALERTS
  = render 'layouts/alerts'

  .form-group
    = f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'form-control'

  .form-group
    = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'form-control'

  .form-group.text-center
    = f.submit 'Sign In', class: 'form-control btn btn-primary'

  %p= link_to 'Forgot your password?', new_user_password_path
