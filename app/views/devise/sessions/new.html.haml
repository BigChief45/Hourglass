= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    
    %h3.text-center Sign In
    
    // ALERTS
    = render 'layouts/alerts'
    
    .form-group
        .input-group
            %span.input-group-addon
                %i.fa.fa-user
            = f.email_field :email, autofocus: true, placeholder: 'E-mail address', class: 'form-control'

    .form-group
        .input-group
            %span.input-group-addon
                %i.fa.fa-lock
            = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control'

    .form-group.text-center
        = f.submit "Sign In", class: 'form-control btn btn-success'
    
    
    .text-center
        %p= link_to 'Forgot your password?', new_user_password_path
        %p= link_to 'Register', register_path
        