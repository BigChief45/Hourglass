!!! 5

%html
  %head
    = render 'layouts/head'

    / Font Awesome
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"

    / Cal-Heat Map CDN
    = javascript_include_tag '//d3js.org/d3.v3.min.js'
    = javascript_include_tag '//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js'
    = stylesheet_link_tag '//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css'

  %body
    .container.m-5
      .row.mb-2
        .col-md-12
          - if user_signed_in?
            .float-right
              .dropdown.show
                %a.dropdown-toggle{'data-toggle': 'dropdown', href: '#'}= current_user.email
                .dropdown-menu
                  = link_to edit_user_registration_path, class: 'dropdown-item' do
                    = image_tag 'icons/cog.png'
                    Settings
                  .dropdown-divider
                  = link_to logout_path, method: :delete, class: 'dropdown-item' do
                    = image_tag 'icons/door_out.png'
                    Logout

              %small
                = Time.now.in_time_zone(current_user.time_zone).to_date.strftime('%A %B %d %Y')
                (#{current_user.time_zone})

      .row
        = render 'layouts/nav'

        / CONTENT
        .col-md-10
          = render 'layouts/alerts'

          = yield

      %hr
      = render 'layouts/footer'

  #modal-container
