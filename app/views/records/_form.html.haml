= simple_form_for([@card, @record]) do |f|
  = render 'shared/errors', model: @record

  .row
    .col-md-6
      = f.input :date, required: true
    .col-md-6
      = f.input :hours, input_html: { in: 0.5..10, step: 0.5 }, required: true

  .row
    .col-md-12
      = f.input :description, autofocus: true, input_html: { rows: 5,
        style: 'resize: vertical;', placeholder: 'Enter record description here...' }, required: true

  = f.button :submit, class: 'btn btn-success'
