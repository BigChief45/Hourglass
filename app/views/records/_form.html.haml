#manage-record.modal.fade{:role => "dialog", :tabindex => "-1"}
  = simple_form_for([@card, @record]) do |f|
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %h4.modal-title Punch Record
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .row
            .col-md-6
              = f.input :date, required: true
            .col-md-6
              = f.input :hours, input_html: { in: 0.5..10, step: 0.5 }, required: true

          .row
            .col-md-12
              = f.input :description, autofocus: true, input_html: { rows: 5,
                style: 'resize: vertical;', placeholder: 'Enter record description here...' }, required: true

        .modal-footer
          = f.button :submit, class: 'btn btn-success'
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
