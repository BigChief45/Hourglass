= simple_form_for([@card, @record]) do |f|
  #new-record-modal.modal.fade{ role: 'dialog', tabindex: '-1' }
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{'aria-label': 'Close', 'data-dismiss': 'modal', type: 'button' }
            %span{ 'aria-hidden': 'true' } Ã—
          %h4.modal-title
            %span.fa.fa-plus
            Punch New Record
        .modal-body
          = render 'shared/errors', model: @record

          .row
            .col-md-6
              = f.input :date, required: true
            .col-md-6
              = f.input :hours, input_html: { in: 0.5..10, step: 0.5 }, required: true

          .row
            .col-md-12
              = f.input :description, autofocus: true, input_html: { rows: 5,
                style: 'resize: vertical;', placeholder: 'Enter record description here...' }, required: true

        .modal-footer
          = f.button :submit, class: 'btn btn-success'
          /, data: {disable_with: 'Processing...'}

          %button.btn.btn-default{ 'data-dismiss': 'modal', type: 'button' } Close
